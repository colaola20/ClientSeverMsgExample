    <children>
        <Button fx:id="button_send" layoutX="404" layoutY="340" onAction="#sendMessage" text="Send" />
        <TextField fx:id="tf_message" promptText="Enter your message" layoutX="34.0" layoutY="340" prefHeight="26" prefWidth="361" />
        <ScrollPane fx:id="sp_main" fitToWidth="true" layoutX="30" layoutY="70" prefHeight="256" prefWidth="418">
            <content>
                <VBox fx:id="vbox_messages" prefHeight="273.0" prefWidth="402.0">
               <children>
                  <TextArea fx:id="chatArea" editable="false" prefHeight="278.0" prefWidth="402.0" />
               </children></VBox>
            </content>
        </ScrollPane>

        <Label layoutX="168.0" layoutY="14.0" text="Messenger!">
            <font>
                <Font name="Arial Rounded MT Bold" size="23" />
            </font>
        </Label>
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
